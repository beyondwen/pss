<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <!--主题样式-->
    <constant name="struts.ui.theme" value="simple"/>
    <constant name="struts.action.extension" value="action,,"/>
    <package name="default" namespace="/" extends="struts-default">
        <interceptors>
            <interceptor-stack name="pssStack">
                <interceptor-ref name="paramsPrepareParamsStack"/>
                <interceptor-ref name="store">
                    <param name="operationMode">AUTOMATIC</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="pssStack"/>

        <!--主页面-->
        <action name="main">
            <result>/WEB-INF/view/main.jsp</result>
        </action>

        <!--右侧-->
        <action name="right">
            <result>/WEB-INF/view/right.jsp</result>
        </action>

        <!--employeeAction-->
        <action name="*_*" class="{1}Action" method="{2}">
            <result>/WEB-INF/view/{1}_list.jsp</result>
            <result name="input">/WEB-INF/view/{1}_input.jsp</result>
            <result name="{2}">/WEB-INF/view/{1}_{2}.jsp</result>
            <result name="reload" type="redirectAction">
               <param name="actionName">{1}</param>
                <param name="baseQuery.currentPage">${baseQuery.currentPage}</param>
            </result>
        </action>
    </package>
</struts>
